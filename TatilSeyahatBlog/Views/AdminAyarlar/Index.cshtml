@model TatilSeyahatBlog.Models.Entity.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-3">
    <h3>Admin Güncelleme Sayfası</h3>
</div>

@using (Html.BeginForm("Index", "AdminAyarlar", FormMethod.Post))
{
    <div class="mt-3">
        <label>Kullanıcı Adı:</label>
        @Html.TextBoxFor(x => x.Kullaniciadi, new { @class = "form-control", @required = "required" })
    </div>
    <div class="mt-3">
        <label>Şifre:</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @required = "required" })
    </div>
    <div class="mt-3">
        <button class="btn btn-success">Admin Güncelle</button>
    </div>
}