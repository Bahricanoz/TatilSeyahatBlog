
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<div class="container mt-3">
    <div class="row mt-3">
        <div class="col-sm-8">
            <div class="card mt-3">
                <img src="@ViewBag.resim" class="img-card-top w-100" alt="Alternate Text" />
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.name <span class="float-right">@ViewBag.tarih</span></h5>
                    
                    <p class="card-text">@ViewBag.metin</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card mt-3">
                <h4 class=" text-center p-2">Son Bloglar</h4>
                <ul class="list-group">
                    @Html.Action("Sonbloglar")
                </ul>
            </div>
            <div class="card mt-3">
                <h4 class=" text-center p-2">Son Bloglar</h4>
                <ul class="list-group">
                    @Html.Action("sonyorumlar")
                </ul>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-8">
            @Html.Action("Yorumlar")
        </div>
        
    </div>
    <div class="row mt-3">
        <div class="col-sm-8">
            <h3 class="text-primary">Bir Yorum Yapınız...</h3>
            <form method="post" class="form-group" action="/Blog/Yorumyap/">
                <div class="mt-3">
                    <input type="text" name="Name" value="" class="form-control" required="" placeholder="Name:" />
                </div>
                <div class="mt-3">
                    <input type="text" name="Mail" value="" class="form-control" required="" placeholder="Mail:" />
                </div>
                <div class="mt-3">
                    <textarea type="text" style="height:125px;" name="Content" value="" class="form-control" required="" placeholder="Message:" ></textarea>
                </div>
                <div class="mt-3">
                    <input type="hidden" name="BlogId" value="@ViewBag.id" class="form-control" />
                </div>
                <div class="mt-3">
                    <button class="btn btn-info">Yorum Yap</button>
                </div>
            </form>
        </div>
    </div>
</div>
