@using TatilSeyahatBlog.Models.Entity
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

<div class="container">
    <div class="row mt-3 mb-3">
        <div class="col-sm-8">
            @foreach (var x in Model)
            {
                <div class="card mt-3">
                    <img src="@x.ImageUrl" class="card-img-top w-100 img-thumbnail" alt="Alternate Text" />
                    <div class="card-body">
                        <h5 class="card-title"><a href="/Blog/Detay/@x.Id" class="text-dark text-decoration-none">@x.Name</a></h5>
                        <p class="card-text">@x.Content.Substring(0, 100) <a href="/Blog/Detay/@x.Id" style="text-decoration:none">Devamını Oku....</a></p>
                    </div>
                </div>}

        </div>
        <div class="col-sm-4">
            <div class="card mt-3">
                <h4 class=" text-center p-2">Son Bloglar</h4>
                <ul class="list-group">
                    @Html.Action("Sonbloglar")
                </ul>
            </div>
            <div class="card mt-3">
                <h4 class=" text-center p-2">Son Yorumlar</h4>
                <ul class="list-group">
                    @Html.Action("sonyorumlar")
                </ul>
            </div>
        </div>
    </div>

</div>

